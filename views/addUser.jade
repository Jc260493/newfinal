                input(type="radio", id='gender', name="gender", val="male")
                label Female
                input(type="radio", id='gender', name="gender", val="female")
                br
                p Commision Rate (%)
                input#inputCommision(type='text', placeholder='Commision Rate')
                p Monthly Salary ($/month)
                input#inputAnnualRate(type='text', placeholder='Monthly Salary')
                br
                p Weekly Target Hours (hours/week)
                input#inputTargetHours(type='text', placeholder='Target Hours')
                br
                button#btnAddCommisionUser Add User
